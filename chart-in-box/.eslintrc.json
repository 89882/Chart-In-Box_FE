{
    "extends": ["airbnb", "plugin:prettier/recommended", "react"],
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },

    "rules": {
        "quotes": ["error", "single", { "avoidEscape": true }],
        "indent": ["error", 2],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
